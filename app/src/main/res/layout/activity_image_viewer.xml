<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.camera.ImageViewer">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="363dp"
        tools:srcCompat="@tools:sample/avatars" />

    <com.renote.renoteai.ui.activities.camera.scanutil.BorderOverlay
        android:id="@+id/borderOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/warpButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ful_round"
        android:contentDescription="button"
        android:elevation="2dp"
        android:padding="15dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/baseline_check_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />
    <ImageView
        android:id="@+id/retakeButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="13dp"
       android:scaleType="centerCrop"
        android:contentDescription="button"
        android:elevation="2dp"

        android:layout_marginStart="30dp"
        android:src="@drawable/camera_retake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>