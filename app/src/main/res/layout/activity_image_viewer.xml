<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ImageViewerDataBinding">

        <variable
            name="viewmodel"
            type="com.renote.renoteai.ui.activities.camera.viewmodel.ImageViewerViewModel" />

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    tools:context=".ui.activities.camera.ImageViewer">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"

       />

    <com.renote.renoteai.ui.activities.camera.scanutil.BorderOverlay
        android:id="@+id/borderOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolsLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:paddingTop="@dimen/padding_15dp"
        app:layout_constraintBottom_toTopOf="@id/scanTypeLay">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/scanBackBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_25dp"
            android:onClick="@{(view) -> viewmodel.onresorceClick(view.getId())}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33"
            app:srcCompat="@drawable/scan_back" />

        <!--        <androidx.appcompat.widget.AppCompatImageView-->
        <!--            android:id="@+id/switchCamBtn"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="@dimen/height_25dp"-->
        <!--            app:layout_constraintStart_toEndOf="@id/scanBackBtn"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintWidth_percent="0.2"-->
        <!--            app:srcCompat="@drawable/switch_cam" />-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/gridBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_25dp"
            android:onClick="@{(view) -> viewmodel.onresorceClick(view.getId())}"
            app:layout_constraintStart_toEndOf="@id/scanBackBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33"
            app:srcCompat="@drawable/ic_grid_off" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/flashBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_25dp"
            android:onClick="@{(view) -> viewmodel.onresorceClick(view.getId())}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/gridBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33"
            app:srcCompat="@drawable/flash_off" />

        <!--        <androidx.appcompat.widget.AppCompatTextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:gravity="center"-->
        <!--            android:textSize="@dimen/text_size_18sp"-->
        <!--            android:textAllCaps="true"-->
        <!--            android:text="HDR"-->
        <!--            android:paddingStart="@dimen/padding_10dp"-->
        <!--            android:paddingEnd="@dimen/padding_10dp"-->
        <!--            android:textColor="@color/green"-->
        <!--            android:layout_marginStart="@dimen/margin_10dp"-->
        <!--            android:background="@drawable/hdr_background"-->
        <!--            app:layout_constraintStart_toEndOf="@id/flashBtn"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintWidth_percent="0.2" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/scanTypeLay"
        style="@style/RoundedTabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_35dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@id/bottomBtnsCL"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabRippleColor="@android:color/transparent"
        app:tabTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocr" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Document" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR code" />
    </com.google.android.material.tabs.TabLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBtnsCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/retakeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retake"
            android:drawableLeft="@drawable/cam_img"

            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textSize="16sp"
         android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/redhatdisplay_regular"
                  android:drawablePadding="10dp"
            android:layout_marginEnd="25dp"

                        app:layout_constraintEnd_toStartOf="@+id/wrapButton"
            android:layout_marginBottom="45dp"
            android:background="@drawable/black_rounded_gradient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:onClick="@{(view) -> viewmodel.onresorceClick(view.getId())}"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wrapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"

            android:layout_marginStart="25dp"
            android:textSize="16sp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/redhatdisplay_regular"
            app:layout_constraintStart_toEndOf="@id/retakeButton"
            android:layout_marginBottom="45dp"
            android:background="@drawable/green_rounded_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{(view) -> viewmodel.onresorceClick(view.getId())}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>