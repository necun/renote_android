<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/filter_card_radius"
        app:cardElevation="@dimen/dp2"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:background="#000000"

            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="18dp"

                android:maxHeight="7dp"
                android:progress="14"
                android:progressDrawable="@drawable/seekbar_progress_style"
                android:splitTrack="false"
                android:thumb="@drawable/seekbar_thumb_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgOne"
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView"
                android:scaleType="fitXY"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="2dp"

                android:layout_marginTop="20dp"
                android:src="@drawable/a3_icon"
                app:layout_constraintEnd_toStartOf="@+id/imgTwo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgTwo"
                android:layout_width="0dp"

                android:layout_height="72dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/a4_icon"
                app:layout_constraintBottom_toBottomOf="@id/imgOne"
                app:layout_constraintEnd_toStartOf="@+id/imgThree"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgOne"
                app:layout_constraintTop_toTopOf="@id/imgOne"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgThree"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/a5_icon"
                app:layout_constraintBottom_toBottomOf="@id/imgTwo"
                app:layout_constraintEnd_toStartOf="@+id/imgFour"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgTwo"
                app:layout_constraintTop_toTopOf="@id/imgTwo"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFour"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:background="#000000"
                android:scaleType="fitXY"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/dark_icon"
                app:layout_constraintBottom_toBottomOf="@id/imgThree"
                app:layout_constraintEnd_toStartOf="@+id/imgFive"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgThree"
                app:layout_constraintTop_toTopOf="@id/imgThree"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFive"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/light_icon"
                app:layout_constraintBottom_toBottomOf="@id/imgFour"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgFour"
                app:layout_constraintTop_toTopOf="@id/imgFour"
                app:layout_constraintVertical_bias="1.0" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                style="@style/CustomCardViewStyle"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:elevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgLeft"

                        android:layout_width="59dp"
                        android:layout_height="54dp"
                        android:padding="15dp"
                        android:background="@drawable/filter_edit_one_icon"


                        android:clipToOutline="false"
                        android:src="@drawable/close_white_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/auto"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginBottom="-3dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/auto_green_icon"
                        app:layout_constraintEnd_toStartOf="@+id/switchOne"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toEndOf="@+id/imgLeft"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto"
                        android:textSize="10sp"
                        android:textColor="#228B22"
                        android:layout_marginTop="1dp"
                        app:layout_constraintStart_toStartOf="@+id/auto"
                        app:layout_constraintEnd_toEndOf="@+id/auto"
                        app:layout_constraintTop_toBottomOf="@+id/auto"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchOne"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="bottom"
                        android:background="@null"
                        android:layout_marginBottom="2dp"
                        android:thumb="@drawable/custom_thumbb"
                        app:layout_constraintBottom_toBottomOf="@+id/auto"
                        app:layout_constraintEnd_toStartOf="@+id/imgRight"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/auto"
                        app:layout_constraintTop_toTopOf="@+id/auto"

                        app:track="@drawable/custom_trackk" />

                    <TextView
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply to all pages"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@+id/switchOne"
                        app:layout_constraintEnd_toEndOf="@+id/switchOne"
                        app:layout_constraintTop_toBottomOf="@+id/switchOne"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgRight"
                        android:layout_width="59dp"
                        android:layout_height="54dp"
                        android:padding="15dp"


                        android:background="@drawable/filter_edit_two_icon"
                        android:src="@drawable/right_white_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>