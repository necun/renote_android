                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/exo_2_bold"
                android:src="@drawable/logo"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
