            <androidx.cardview.widget.CardView
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="105dp"
                android:layout_marginEnd="32dp"
                android:elevation="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{(view) -> viewmodel.onresorceClick(view.getId())}"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <LinearLayout
                    android:id="@+id/signInWithGoogleAcoountLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/google_btn_background"
                    android:gravity="center"
                    android:onClick="@{(view) -> viewmodel.onresorceClick(view.getId())}"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/google_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/red_hat_display"
                        android:gravity="start"
                        android:text="@string/google_login"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/microsoft"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:elevation="8dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSignIn">

                <LinearLayout
