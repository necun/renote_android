<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shareSingleFileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:attr/borderlessButtonStyle"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="@dimen/margin_40dp"
          android:fontFamily="@font/redhatdisplay_regular"

            android:text="Share only this file"
            android:textAllCaps="false"
            android:textColor="#B3000000"
            android:textSize="@dimen/text_size_18sp"
            />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shareMultipleFileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shareSingleFileBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?android:attr/borderlessButtonStyle"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="@dimen/margin_23dp"
        android:textColor="#B3000000"
        android:layout_marginBottom="@dimen/margin_40dp"
        android:text="Share entire document"
android:elevation="0dp"
        android:fontFamily="@font/redhatdisplay_regular"

        android:textAllCaps="false"
        android:textSize="@dimen/text_size_18sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>